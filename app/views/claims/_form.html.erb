<%= form_for(@claim) do |f| %>
  <% if @claim.errors.any? %>
    
      <h2><%= pluralize(@claim.errors.count, "error") %> prohibited this Claim from being saved:</h2>

      <ul>
      <% @claim.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>

  <% end %>

<div class="form-group">
  <%= f.label :user_id %>
  <div class="row">
    <div class="col-sm-6">
      <%= f.text_field :user_id, class: "form-control" %>
    </div>
  </div>
</div>
  
<div class="form-group">
  <%= f.label :btcaddy %>
  <div class="row">
    <div class="col-sm-6">
      <%= f.text_field :btcaddy, class: "form-control" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :email %>
  <div class="row">
    <div class="col-sm-6">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :keyone, "Key One" %>
  <div class="row">
    <div class="col-sm-6">
      <%= f.text_field :keyone, class: "form-control" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :keytwo, "Key Two" %>
  <div class="row">
    <div class="col-sm-6">
      <%= f.text_field :keytwo, class: "form-control" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :upload %>
  <div class="row">
    <div class="col-sm-6">
      <%= f.file_field :upload %>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="col-sm-6">
    <%= f.submit "Submit Claim", class: "btn btn-primary" %>
  </div>
</div>
<br>
<% end %>
